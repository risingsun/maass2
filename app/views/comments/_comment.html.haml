%div[comment]
  .comments
    = link_to image_tag(set_icon(comment.profile,'small')), comment.profile
    %strong
      = link_to (comment.profile.full_name), comment.profile
      commented
      #{time_ago_in_words comment.created_at} ago
    .comment_text= sanitize(comment.comment)
  - if comment_deleteable?(comment)
    = link_to(image_tag('delete.png'), profile_comment_path(comment.profile,comment), :class => 'delete-comment')
