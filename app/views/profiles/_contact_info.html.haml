= rounded_med_corner(:id => "contact_info", :title => "Contact Info") do
  = f.inputs do
    = f.input :location, formtastic_zebra2
    = f.input :address_line1, formtastic_zebra2
    = f.input :address_line2,  formtastic_zebra2
    = f.input :city,  formtastic_zebra2
    = f.input :postal_code,  formtastic_zebra2
    = f.input :country,  formtastic_zebra2(:as => :country, :priority_countries =>['India'])
    = f.input :state,  formtastic_zebra2(:as => :select, :collection => INDIA_STATES, :prompt => false)
    = f.input :landline, formtastic_zebra2
    = f.input :mobile, formtastic_zebra2