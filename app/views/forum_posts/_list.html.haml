- profile ||= @profile
- posts = profile.forum_posts(:limit => 10, :order => 'created_at DESC')
- unless posts.empty?
  .widget_large
    %span.widget_lrg_top
    = slide_up_down_header('posts_info',"Most Recent Forums Post", 'sliding')
    .complete_middle_panel.slidecontent
      - posts.each do |post|
        .comments
          = image_tag('post-icon.png')
          = forum_posts_list post
    .clear_div
    %span.widget_lrg_btm
